<%= form_with(model: infraestructure, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if infraestructure.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(infraestructure.errors.count, "error") %> <%= t('prohibited_this_information_from_being_saved') %>:</h2>
      <ul>
      <% infraestructure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, t('infraestructure_name') + ' :', class: "col-sm-2 control-label upcase" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :infraestructure_name, class: "form-control", placeholder: t('placeholder_infraestructure_name') %>
      <p class="help-block"><%= t('placeholder_infraestructure_name_help') %></p>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, t('description') + ' :', class: "col-sm-2 control-label upcase" %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :infraestructure_description, class: "form-control", placeholder: t('placeholder_infraestructure_description') %>
      <p class="help-block"><%= t('placeholder_infraestructure_description_help') %></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">&nbsp;</div>
    <div class="col-sm-10">
      <div class="actions">
        <%= form.submit t('ok'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>
