<%= form_with(model: host_type, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if host_type.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(host_type.errors.count, "error") %> <%= t('prohibited_this_information_from_being_saved') %>:</h2>
      <ul>
      <% host_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, t('host_type_name') + ' :', class: "col-sm-2 control-label upcase" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :host_type_name, class: "form-control", placeholder: t('placeholder_host_type_name') %>
      <p class="help-block"><%= t('placeholder_host_type_name_help') %></p>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, t('description') + ' :', class: "col-sm-2 control-label upcase" %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :host_type_description, class: "form-control", placeholder: t('placeholder_host_type_description') %>
      <p class="help-block"><%= t('placeholder_host_type_description_help') %></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">&nbsp;</div>
    <div class="col-sm-10">
      <div class="actions">
        <%= form.submit t('ok'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>
