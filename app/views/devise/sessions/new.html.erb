<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Correo electrónico' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>
  </div>

  <div class="actions">
    <%= f.submit "Entrar", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
